{
  "manifest_version": 3,
  "name": "Video URL to Embed",
  "version": "2.1.0",
  "description": "Redirecciona enlaces de video a embed link solo si está activado en las opciones.",
  "author": "SystemAlex",
  "icons": {
    "16": "./assets/icon16.png",
    "32": "./assets/icon32.png",
    "128": "./assets/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "https://streamtape.com/*",
    "https://sendvid.com/*",
    "https://uqload.net/*",
    "https://vidtube.one/*",
    "https://voe.sx/*",
    "https://jennifercertaindevelopment.com/*"
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://streamtape.com/e/*",
        "https://sendvid.com/embed/*",
        "https://uqload.net/embed-*",
        "https://vidtube.one/embed-*",
        "https://voe.sx/e/*",
        "https://jennifercertaindevelopment.com/e/*"
      ],
      "js": [ "./js/fullscreen.js" ]
    }
  ]
}